# Appwrite Configuration
# Copy this file to .env.local and fill in your Appwrite project details

# Appwrite API Endpoint (usually https://cloud.appwrite.io/v1 for Appwrite Cloud)
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# Your Appwrite Project ID (get this from your Appwrite console)
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id_here

# Your Appwrite Database ID (created in your Appwrite console)
NEXT_PUBLIC_APPWRITE_DATABASE_ID=main

# Collection IDs for your database collections
NEXT_PUBLIC_APPWRITE_USER_COLLECTION_ID=users
NEXT_PUBLIC_APPWRITE_TRANSACTIONS_COLLECTION_ID=transactions
NEXT_PUBLIC_APPWRITE_BUDGETS_COLLECTION_ID=budgets

# Storage bucket ID (if using file storage)
NEXT_PUBLIC_APPWRITE_STORAGE_ID=files

# Your application URL (for OAuth redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000 